#!/usr/bin/env ruby
# frozen_string_literal: true

require "bundler/setup"
require "snapshot_relay"

# You can add fixtures and/or initialization code here to make experimenting
# with your gem easier. You can also use a different console, if you like.

SnapshotRelay.configure do |config|
  # config.add_relays(SnapshotRelay::Relays::Foo)
end

class Foo
  include SnapshotRelay::DSL

  snapshot_writer :foo, :bar

  def foo
    Time.now
  end

  def bar
    rand
  end

  def foobar
    puts "Working"
    add_to_snapshot
  end
end

class Fizz
  include SnapshotRelay::DSL

  snapshot_writer :buzz
  attr_reader :buzz

  def bazz
    @buzz = [1, 2, 3].sample

    Buzz.new.blah
    puts "Still doing things"

    add_to_snapshot
  end

  def dead_method
    "I shouldn't get invoked by the Snapshot"
  end

  class Buzz
    include SnapshotRelay::DSL

    snapshot_writer :fizzbuzz
    attr_reader :fizzbuzz

    def initialize
      @fizzbuzz = [4, 5, 6].sample
    end

    def blah
      puts "Doing more things"
      add_to_snapshot
    end
  end
end

class Bar
  include SnapshotRelay::DSL

  snapshot_name "Bar Event"
  snapshot_reader :bar, :buzz, :fizzbuzz

  def fizzbuzz
    Foo.new.foobar
    Fizz.new.bazz

    puts relay_snapshot
  end
end

require "irb"
IRB.start(__FILE__)
